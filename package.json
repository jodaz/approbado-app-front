{
  "name": "Approbado",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "version": "1.0.0",
  "scripts": {
    "dev:dashboard": "concurrently \"npm run start:api\" \"npm run start:dashboard\"",
    "dev:auth": "concurrently \"npm run start:api\" \"npm run start:auth\"",
    "dev:plans": "concurrently \"npm run start:api\" \"npm run start:plans\"",
    "build:dashboard": "yarn workspace @approbado/dashboard run build",
    "build:auth": "yarn workspace @approbado/auth run build",
    "build:plans": "yarn workspace @approbado/plans run build",
    "start:api": "yarn workspace @approbado/api run watch:dev",
    "start:auth": "yarn workspace @approbado/auth run start",
    "start:plans": "yarn workspace @approbado/plans run start",
    "start:dashboard": "yarn workspace @approbado/dashboard run start",
    "migrate": "yarn workspace @approbado/db run db:migrate",
    "seed": "yarn workspace @approbado/db run seed:run",
    "rollback": "yarn workspace @approbado/db run db:rollback"
  }
}
